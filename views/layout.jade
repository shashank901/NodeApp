doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css')
    script(src='//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js')
    script(src='//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    body
    nav.navbar.navbar-inverse.navbar-static-top(role='navigation')
      // Brand and toggle get grouped for better mobile display
      .navbar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='#') Project Name
      .collapse.navbar-collapse
        ul.nav.navbar-nav
          li.active
            a(href='#') Public Link 1
          if user
            li
              a(href='#') Private Link
          else
            li.active
              a(href='#') Public Link 2
        ul.nav.navbar-nav.navbar-right
          if user
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown') #{user.username}
                b.caret
              ul.dropdown-menu(style='padding: 15px;min-width: 250px;')
                li
                  input#sign-in-google.btn.btn-primary.btn-block(type='button', value='Profile')
                li.divider
                li
                  a.btn.btn-info(href='/logout', role='button') Logout
          else
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                | Have an account? Log in
                b.caret
              ul.dropdown-menu(style='padding: 15px;min-width: 250px;')
                li
                  .row
                    .col-md-12
                      form#login-nav.form(role='form', method='post', action='login', accept-charset='UTF-8')
                        .form-group
                          label.sr-only(for='exampleInputEmail2') Username
                          input#exampleInputEmail2.form-control(type='text', name='username', placeholder='username', required='')
                        .form-group
                          label.sr-only(for='exampleInputPassword2') Password
                          input#exampleInputPassword2.form-control(type='password', name='password', placeholder='Password', required='')
                        .form-group
                          button.btn.btn-success.btn-block(type='submit') Sign in
                li
                  input#sign-in-twitter.btn.btn-primary.btn-block(type='button', value='Sign Up', target="_blank", onclick="location.href='/signup';")

    .container
      if messages
          if messages.error
            .alert.alert-danger
              div= messages.error
          if messages.info
            .alert.alert-info
              div= messages.info
          if messages.success
            .alert.alert-success
              div= messages.success

    block content

    footer(class='footer')
        .container
          .text-muted "Copyright 2016"

